<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/container"
    tools:context="palsofpaulos.soundscape.AwaitRecordActivity" tools:deviceIds="wear"
    android:background="@drawable/blue_black_texture">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/text" app:layout_box="all" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/await_record_message"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</android.support.wearable.view.BoxInsetLayout>
